<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.list', model: BusinessCategory.model_name.human)}",
    toolbar:
    {
      right:
      [
        (render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', :model => BusinessCategory.model_name.human)),
            url: new_business_category_path,
            options:
            {
              class: 'btn btn-primary'
            }
          }
        ) if can? :create,BusinessCategory),
        render_cell(
                :button,
                :show,
                data:
                        {
                                name: fa_icon('plus-sign', text: t('创建类别规格')),
                                url: new_specification_path,
                                options:
                                        {
                                                class: 'btn btn-primary'
                                        }
                        }
        )
      ]
    }
  }
) %>

<%= grid(@business_categories, :show_filters => :when_filtered) do |g|

  g.column name: t('activerecord.attributes.business_category.name_cn'),:class=>"th_style"  do |c|
    c.name_cn
  end

  g.column name: t('activerecord.attributes.business_category.parent_id'),:class=>"th_style" do |c|
    c.parent_name
  end

  g.column name: t('该类别规格') do |c|
    c.specifications.inject([]){|list, u| list << content_tag(:span, u.show_name, class: 'label label-success')}.join(' ').html_safe

  end


  

  g.column :html => {class: 'btn-cell'} do |c|
    link_to(icon('icon-edit'), edit_business_category_path(c), :class => 'btn', :rel => 'tooltip', :title => t('buttons.edit')) if can? :update,BusinessCategory
  end

  g.column :html => {class: 'btn-cell'} do |c|
    link_to(icon('icon-trash'), business_category_path(c), :method => :delete, :confirm => '你确定要删除这个类别么？', :class => 'btn btn-danger', :rel => 'tooltip', :title => t('buttons.delete')) if can? :destroy,BusinessCategory
  end
end -%>
<style>
  .th_style{
      width: 110px;
  }
</style>
