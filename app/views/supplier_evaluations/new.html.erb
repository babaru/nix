<div class="narrow-center-page">
  <%= render_cell(:page_title, :show, data:{name: "对服务于<strong>#{@supplier.client_name}</strong>的<strong>#{@supplier.name}</strong>的<strong>#{@supplier.spec_name}</strong>业务进行评价",
      toolbar: {:right=>[ ]}})
  %>
  <%= simple_form_for(@supplier_evaluation, :html => {:class => 'form-horizontal'}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :score, required: true,:hint=>'分数范围1到100之间' %>
        <%= f.input :notes, required: false, :as=>:text,input_html: {rows: 5 } %>
        <%= f.input :supplier_id,:as=>:hidden -%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, :class=>'btn btn-primary' %>
            </div>
        <% end %>
</div>