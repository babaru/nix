<div class="narrow-center-page">

  <%= render_cell(
              :page_title,
              :show,
              data:
                      {
                              name: "#{t('model.edit', model: Project.model_name.human)} <small>#{t('simple_form.required.text') }</small>",
                              toolbar: {
                                      left:
                                              [
                                                      render_cell(
                                                              :button,
                                                              :show,
                                                              data:
                                                                      {
                                                                              name: fa_icon('level-up rotate-270'),
                                                                              url: client_projects_path(@project.client_id),
                                                                              options:
                                                                                      {
                                                                                              class: 'btn',
                                                                                              rel: 'tooltip',
                                                                                              title: "#{t('labels.back_to')}#{t('model.list', :model => Project.model_name.human)}",
                                                                                      }
                                                                      }
                                                      )
                                              ]
                              }
                      }
      )
  %>

  <%= simple_form_for(@project , :html => {:class => 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>


      <div class="form-inputs">
        <%= f.input :name, required: true %>
        <%= f.input :budget, required: true %>
        <%= f.input :started_at, as: :date_picker, required: true %>
        <%= f.input :ended_at, as: :date_picker, required: true %>
        <%= f.input :client_id, as: :hidden %>
        <%= f.input :created_by, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
  <% end %>


</div>
