<div class="narrow-center-page">

  <%= render_cell(
              :page_title,
              :show,
              data:
                      {
                              name: "#{t('model.edit', model: GrassResource.model_name.human)} <small>#{t('simple_form.required.text') }</small>",
                              toolbar: {
                                      left:
                                              [
                                                      render_cell(
                                                              :button,
                                                              :show,
                                                              data:
                                                                      {
                                                                              name: fa_icon('level-up rotate-270'),
                                                                              url: grass_resources_path,
                                                                              options:
                                                                                      {
                                                                                              class: 'btn',
                                                                                              rel: 'tooltip',
                                                                                              title: "#{t('labels.back_to')}#{t('model.list', :model => GrassResource.model_name.human)}",
                                                                                      }
                                                                      }
                                                      )
                                              ]
                              }
                      }
      )
  %>

  <%= simple_form_for(@media , :html => {:class => 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :type_id, required: true,:as=>:select,:collection=> GrassResource::TYPE%>
        <%= f.input :media_type_id, required: true,:as=>:select,:collection=> GrassResource::MEDIA_TYPE%>
        <%= f.input :nickname, required: true %>
        <%= f.input :media_url, required: true %>
        <%= f.input :fans_number, required: true %>
        <%= f.input :regional, required: false %>
        <%= f.input :content_location, required: false ,:as=>:text,input_html: { rows: 5 }%>

      </div>
      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
  <% end %>


</div>

